{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "lib": [
      "es6",
      "esnext.asynciterable"
    ],
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}